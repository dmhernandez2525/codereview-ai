{
  "name": "codereview-ai",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered code review platform",
  "workspaces": [
    "Client",
    "Server",
    "Microservice"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern .next --ignore-pattern build",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern .next --ignore-pattern build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .gitignore",
    "type-check": "npm run type-check --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev:client": "npm run dev --workspace=Client",
    "dev:server": "npm run dev --workspace=Server",
    "dev:microservice": "npm run dev --workspace=Microservice"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.2.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
