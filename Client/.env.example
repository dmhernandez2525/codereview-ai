# CodeReview AI - Client Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# Public Environment Variables (exposed to browser)
# =============================================================================

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_MICROSERVICE_URL=http://localhost:4000

# App URL (used for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# GitHub OAuth (for GitHub App installation flow)
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# =============================================================================
# Server-only Environment Variables (NOT exposed to browser)
# =============================================================================

# GitHub App (server-side only for token exchange)
GITHUB_CLIENT_SECRET=

# Strapi API Token (for server-side API calls)
STRAPI_API_TOKEN=
