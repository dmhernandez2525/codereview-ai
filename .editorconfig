# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript and JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Docker
[Dockerfile]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# Config files
[*.{eslintrc,prettierrc,babelrc}]
indent_size = 2

# HTML and CSS
[*.{html,css,scss,sass,less}]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# Ignore minified files
[*.min.*]
indent_style = ignore
insert_final_newline = ignore

# Git
[.git*]
indent_size = 2
